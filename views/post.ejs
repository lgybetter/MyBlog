<%- include header %>
<form method="post" class="form-horizontal col-sm-12">
  <div class="form-group">
	<label class="col-sm-2 control-label">标题：</label>
	  <div class="col-sm-8">
	  	<input type="text" name="title" class="form-control"  placeholder="标题"/>
	  </div>
  </div>
  <div class="form-group">
	  <label class="col-sm-2 control-label">标签：</label>
	  <div class="col-sm-1">
	  	<input type="text" name="tag1" class="form-control" placeholder="标签1"/>
	  </div>
	  <div class="col-sm-1">
	  	<input type="text" name="tag2" class="form-control" placeholder="标签2"/>
	  </div>
	  <div class="col-sm-1">
	  	<input type="text" name="tag3" class="form-control" placeholder="标签3"/>
	  </div>
  </div>
  <div class="form-group">
  	<label class="col-sm-2 control-label">正文：</label>
  	<div class="col-sm-8">
  		<textarea class="form-control" name="post" rows="20" placeholder="正文"></textarea>
  	</div>
  </div>
  <div class="form-group">
  	  <div class="col-sm-8 col-sm-offset-2">
	    <button type="submit" class="btn btn-default">发表</button>
	  </div>
  </div>
</form>

<%- include footer %>